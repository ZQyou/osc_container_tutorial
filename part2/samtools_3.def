BootStrap: library
From: library/default/ubuntu:18.04

%post
    apt update -y
    apt install -y wget gcc make libbz2-dev zlib1g-dev \
    libncurses5-dev libncursesw5-dev liblzma-dev
    cd $SAMTOOLS_DEV
    ./configure 
    make && make install
    # clean up
    apt autoclean
    apt autoremove --purge -y
    rm -rf /var/lib/apt/lists/*

%runscript
    exec samtools "$@"
